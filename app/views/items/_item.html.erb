<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= "#{item.currency} #{item.price}" %>
  </p>

  <p>
    <strong>Acquired:</strong>
    <%= item.acquired %>
  </p>

  <p>
    <strong>URL:</strong>
    <%= link_to 'Access website', item.url, :target => "_blank"  %>
  </p>

</div>
